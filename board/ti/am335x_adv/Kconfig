config TARGET_AM335X_ADVANTECH
	bool "Support AM335X Advantech platform"

if TARGET_AM335X_ADVANTECH

config SYS_BOARD
	default "am335x_adv"

config SYS_VENDOR
	default "ti"

config SYS_SOC
	default "am33xx"

if TARGET_RSB4220A1_512M

config SYS_BOARD_NAME
	default "rsb4220a1"

config SYS_CONFIG_NAME
	default "am335x_rsb4220"

endif

if TARGET_RSB4220A1_1G

config SYS_BOARD_NAME
        default "rsb4220a1"

config SYS_CONFIG_NAME
        default "am335x_rsb4220"

endif

if TARGET_RSB4221A1_512M

config SYS_BOARD_NAME
        default "rsb4221a1"

config SYS_CONFIG_NAME
        default "am335x_rsb4221"

endif

if TARGET_RSB4221A1_1G

config SYS_BOARD_NAME
	default "rsb4221a1"

config SYS_CONFIG_NAME
	default "am335x_rsb4221"

endif

if TARGET_ROM3310A1_512M

config SYS_BOARD_NAME
	default "rom3310a1"

config SYS_CONFIG_NAME
	default "am335x_rom3310"

endif

if TARGET_EPCR3220A1_1G

config SYS_BOARD_NAME
	default "epcr3220a1"

config SYS_CONFIG_NAME
	default "am335x_epcr3220"

endif

config CONS_INDEX
	int "UART used for console"
	range 1 6
	default 1
	help
	  The AM335x SoC has a total of 6 UARTs (UART0 to UART5 as referenced
	  in documentation, etc) available to it.  Depending on your specific
	  board you may want something other than UART0 as for example the IDK
	  uses UART3 so enter 4 here.

config NOR
	bool "Support for NOR flash"
	help
	  The AM335x SoC supports having a NOR flash connected to the GPMC.
	  In practice this is seen as a NOR flash module connected to the
	  "memory cape" for the BeagleBone family.

source "board/ti/common/Kconfig"

endif
